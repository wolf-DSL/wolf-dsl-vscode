{
    "name": "Wolf DSL",
    "scopeName": "text.wolf-dsl",
    "fileTypes": [
        "flow"
    ],
    "repository": {
        "general": {
            "patterns": [
                {
                    "include": "#linecomment"
                },
                {
                    "include": "#blockcomment"
                },
                {
                    "include": "#keyword"
                }
            ]
        },
        "linecomment": {
            "name": "comment.line.double-dash.wolf-dsl",
            "begin": "(^[ \\t]+)?(?=//)",
            "end": "(?=$)"
        },
        "blockcomment": {
            "name": "comment.block.wolf-dsl",
            "begin": "/\\*(\\*)?(?!/)",
            "end": "\\*/"
        },
        
        "keyword": {
            "name": "keyword.control.wolf-dsl",
            "match": "\\b(Schema|Service|Mapping|Flow|value|input|output|Start|transition|string|boolean|number|GraphQLService|graphqlQuery)\\b|!"

        }
    },
    "patterns": [
        {
            "include": "#general"
        }
    ],
    "uuid": "8383e49a-fa0d-4bb5-827b-10e8abb294ca"
}
